rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match the photos directory structure: artifacts/{artifactId}/photos/{filename}
    match /artifacts/{artifactId}/photos/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // Also allow read access to all artifacts files for authenticated users
    match /artifacts/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
