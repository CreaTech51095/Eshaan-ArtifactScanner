rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users can read/write their own user document
    // Admins can read all users and update any user (for role management and deactivation)
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'admin');
      // Admins can deactivate users (but cannot delete admin accounts - enforced in code)
      allow delete: if false; // Never allow hard deletes
    }
    
    // Artifacts: archaeologists can create, only creator or admin can edit
    match /artifacts/{artifactId} {
      allow read: if request.auth != null && 
        (getUserRole() in ['admin', 'archaeologist', 'researcher', 'guest']);
      allow create: if request.auth != null && 
        (getUserRole() in ['admin', 'archaeologist']);
      // Only artifact creator or admin can edit
      allow update: if request.auth != null && 
        (getUserRole() == 'admin' || resource.data.createdBy == request.auth.uid);
      allow delete: if request.auth != null && 
        getUserRole() == 'admin';
    }
    
    // Photos: same rules as artifacts
    match /photos/{photoId} {
      allow read: if request.auth != null && 
        (getUserRole() in ['admin', 'archaeologist', 'researcher', 'guest']);
      allow create: if request.auth != null && 
        (getUserRole() in ['admin', 'archaeologist']);
      allow update: if request.auth != null && 
        (getUserRole() == 'admin' || resource.data.createdBy == request.auth.uid);
      allow delete: if request.auth != null && 
        getUserRole() == 'admin';
    }
    
    // Role Requests: users can create/read their own, admins can read/update all
    match /roleRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || getUserRole() == 'admin');
      allow update: if request.auth != null && 
        getUserRole() == 'admin';
    }
    
    // Artifact Comments: authenticated users can create, author can edit/delete
    match /artifactComments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.userId == request.auth.uid || getUserRole() == 'admin');
      allow delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || getUserRole() == 'admin');
    }
    
    // Sync logs: users can only access their own
    match /syncLogs/{logId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
